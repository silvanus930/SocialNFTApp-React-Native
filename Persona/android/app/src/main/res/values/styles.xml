<resources>

  <color name="background">#000000</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
      <item name="android:background">#000000</item>
      <item name="android:colorPrimary">#ffffff</item>
      <item name="android:colorAccent">#999999</item>
      <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
      <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#0088f8</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#de5656</item>
    </style>

    <style name="circleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ChatInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="placeholderTextAppearance">@style/ChatPlaceholderTextAppearance</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="placeholderTextColor">#8A8A8A</item>
        <item name="boxBackgroundColor">#323232</item>
        <!--        <item name="endIconMode">custom</item>-->
        <!--        <item name="endIconDrawable">@drawable/send_ic</item>-->
        <!--        <item name="endIconTint">#FF5411</item>-->
        <!--        <item name="boxStrokeColor">@color/text_window_selector</item>-->
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="errorEnabled">false</item>
        <item name="expandedHintEnabled">false</item>
        <item name="helperTextEnabled">false</item>
        <item name="hintEnabled">false</item>

    </style>

    <style name="ChatPlaceholderTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChatTextInput" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextColorMain" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:textColor">#8E2727</item>
    </style>


</resources>
